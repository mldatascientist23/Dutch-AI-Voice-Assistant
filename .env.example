# Dutch AI Voice Assistant Configuration

# Database
DATABASE_URL=sqlite:///./voice_assistant.db
# For PostgreSQL: postgresql://user:password@localhost:5432/voice_assistant

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Google Cloud
GOOGLE_CLOUD_CREDENTIALS=./credentials.json

# Speech Settings
SPEECH_LANGUAGE=nl-NL
SAMPLE_RATE=16000
CHUNK_SIZE=1024

# Application
LOG_LEVEL=INFO
LOG_FILE=./logs/voice_assistant.log

# Call Settings
MAX_CALL_DURATION=3600
WS_HEARTBEAT_INTERVAL=30
WS_TIMEOUT=300

# Frontend
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=3000
